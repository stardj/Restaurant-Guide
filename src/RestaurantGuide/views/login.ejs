</nav>

<div class="container">
    <div class="row m-5">
        <div class="col-xs-6 col-md-4 col-center-block">
            <form onsubmit="onSubmitLogin('/login')">
                <div class="form-row">
                    <h4 class="form-signin-heading">Please Log In</h4>
                    <input type="text" id="username" name="username" class="form-control m-2" placeholder="Username" required autofocus>
                    <input type="password" id="inputPassword" name="inputPassword" class="form-control m-2" placeholder="Password" required>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="remember-me">
                            Remember me </label>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Log In</button>
                </div>
            </form>
        </div>
    </div>
</div>

